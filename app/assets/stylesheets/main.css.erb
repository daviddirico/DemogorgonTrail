html, body {
  margin: 0px;
  padding: 0px;
  background-color: #262626;
  font-family: 'Germania One', cursive;
}

a {
  color: white;
  text-decoration: underline;
}

button {
  font-family: 'Germania One', cursive;
  background-color: #303030;
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
  margin-bottom: 0px;
}

button:hover {
  color: red;
  background-color: #202020;
}

label {
  max-width: 400px;
}

.react {
  height: 100%;
}

.tab-bar {
  border: 1px solid #262626;
  border-top: 0px;
  border-left: 0px;
  border-right: 0px;
}

section.menuIcon.small-3.columns {
  padding-left: 0px;
}

section.headerTitle.small-6.columns {
  text-align: center;
}

.headerTitle {
  font-family: 'Germania One', cursive;
}

section.userLogin.small-3.columns {
  padding-right: 0px;
}

a.signLink {
  padding: 0px;
  text-align: center;
  text-decoration: none;
}

a.signLink:hover {
  color: red;
}

div.signLink {
  text-align: center;
  text-decoration: none;
  max-height: 45px;
  padding: 2px 0px;
  position: relative;
}

img.signImg {
  object-fit: contain;
  max-height: -webkit-fill-available;
  border-radius: 20px;
  position: absolute;
}

.main-nav {
  height: 100%;
}

.navigation-bar {
  height: 100%;
}

.main-section {
  text-align: center;
  margin: 0px;
  padding: 20px;
  padding-top: 15px;
  height: 100%;
  color: white;
  background-image: url("<%= image_path("backgrounds/fiery-background2") %>");
  background-size: cover;
  overflow: scroll;
}

.signHeader {
  color: white;
  font-family: 'Germania One', cursive;
}

.listItem a {
  height: 45px;
}
