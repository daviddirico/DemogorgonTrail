.gameWrapper {
 max-width: 950px;
 position: relative;
 margin: 0 auto
}


.startCampaignWrapper {
  padding: 20px;
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
  max-width: 300px;
  margin: 20px auto;
}


.campaignStartImage {
  margin: 0 auto;
  max-width: 600px;
}

/* character creation */

.characterFormBackDrop {
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
  margin: 0 auto;
  padding: 20px;
  max-width: 400px;
  height: 500px;
  border-radius: 6px;
}

input.character-name-field {
 margin-bottom: 30px;
}

.raceClassTitle {
 margin: 0px;
}

.raceClassList {
 display: table;
 border-spacing: 5px;
 margin: 0px 0px 40px 0px;
}

.raceClassSelect {
 background-color: rgb(100, 30, 30);
 display: table-cell;
 padding-top: 18px;
 width: 120px;
 height: 60px;
 margin: 1px;
 margin-top: 40px;
 border: 0px solid black;
 border-radius: 3px;
 box-shadow: 0px 0px 2px 0px black
}

.raceClassSelect:hover {
 background-color: #4C4644;
}

.raceClassSelect.selected {
 background-color: #199089;
}

.raceClassSelect.selected:hover {
 background-color: #366D69;
}

button.characterButton {
 border-radius: 3px;
 height: 100px;
 margin: 1rem 0rem 1rem 0rem;
}

.heroImage {
  height: -webkit-fill-available;
  overflow: hidden;
  position: relative;
}

.heroImage img {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.heroImageNotRendered {
 margin-top: 200px;
}


/* Hub section */
.hubTop {
 min-height: 350px;
 margin-bottom: 10px;
}

.hubBottom {
 min-height: 180px;
}

div.columns.hubWrapper {
 padding: 0px 5px 0px 5px;
}

.hubFieldTop {
  padding: 10px;
  margin-bottom: 10px;
  min-height: 410px;
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}

.hubMapText {
  font-size: 26px;
}

img.campaignMap {
  width: -webkit-fill-available;
}


div.small-12.columns.hubCharacter {
    padding: 0px;
}

div.small-12.columns.hubInventory {
    padding: 0px;
}

div.small-12.columns.inventoryTextWrapper {
 padding: 0px;
 margin-top: 8px;
}

.statText {
 text-align: middle;
 color: seashell;
 padding: 5px;
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
 background-image: url("<%= image_path("backgrounds/stone-background3.jpg") %>");
}

.inventoryText {
 text-align: left;
 color: seashell;
 padding: 10px;
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
 background-image: url("<%= image_path("backgrounds/stone-background3.jpg") %>");
}

.collection {
  height: 200px;
}

.hubFieldBottom {
 height: 120px;
 padding: 10px;
 background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;

}

.hubQuestHeader {
  font-size: 26px;
}

.hubQuestLog {
  margin: 0px 10px;
  text-align: left;
}

button.continueQuestButton {
 height: 100px;
 width: -webkit-fill-available;
 max-width: 363.33px;
 font-size: x-large;
}

.backpackText {
  text-decoration: underline;
}

button.itemInteractButton {
  padding: inherit;
  height: 23px;
  width: 40px;
  text-align: center;
  margin-left: 8px;
}

.itemInteractText {
  font-size: 15px;
}

.popUp {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background-color: rgba(0,0,0, 0.5);
}

.popUp_inner {
  padding: 10px;
  position: absolute;
  left: 30%;
  right: 30%;
  top: 20%;
  bottom: 20%;
  margin: auto;
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}


/* route options */

button.routeOptionButton {
  width: 224px;
  margin: 20px;
}

.inventoryButtonWrapper {
  width: 264px;
  margin: 0 auto;
}


/* encounters */
.enemyImage {
 max-height: 180px;
}

.dungeonEvent {
 background-image: url("<%= image_path("backgrounds/dungeonBackground2.jpg") %>");
 min-height: 300px;
 background-position: center;
 padding-top: 100px;
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}

.listOfBattleOptions {
  max-width: 400px;
  margin: 0 auto;
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}

.fightRun {
  margin: 20px;
  width: -webkit-fill-available;
}

button.battleButton {
  margin-bottom: 0px;
  width: 168px;
  max-width: 168px;
}

.leftBattleTile {
  margin-right: 10px
}

.rightBattleTile {
  margin-left: 10px
}

button.inventoryButton {
  width: -webkit-fill-available;
  margin: 0px 20px 20px 20px;
}

.optionsText {
  margin-top: 10px;
}


/* simple pop up */

div.simplePopUp {
  margin-top: 150px;
}

.simplePopUp {
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
  max-width: 400px;
  height: 200px;
  margin: 0 auto;
}

.simplePopUpContent {
  margin: 40px;
}

button.simpleButton {
  width: 100px;
  margin: 0px 20px 20px 20px;
}


/* loots */

.itemImage {
  max-height: 210px;
}
