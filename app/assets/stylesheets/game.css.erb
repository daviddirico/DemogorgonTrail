.gameWrapper {
 max-width: 950px;
 position: relative;
 margin: 0 auto
}


.startCampaignWrapper {
  padding: 20px;
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}


.campaignStartImage {
  margin: 0 auto;
  max-width: 600px;
}



.characterFormBackDrop {
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
  margin: 0 auto;
  padding: 20px;
  max-width: 400px;
  height: 500px;
  /* border: 0px solid black; */
  border-radius: 6px;
  /* box-shadow: 0px 0px 2px 0px black; */
  overflow: hidden;
}

input.character-name-field {
 margin-bottom: 30px;
}

.raceClassTitle {
 margin: 0px;
}

.raceClassList {
 display: table;
 border-spacing: 5px;
 margin: 0px 0px 40px 0px;
}

.raceClassSelect {
 background-color: rgb(100, 30, 30);
 display: table-cell;
 padding-top: 18px;
 width: 120px;
 height: 60px;
 margin: 1px;
 margin-top: 40px;
 border: 0px solid black;
 border-radius: 3px;
 box-shadow: 0px 0px 2px 0px black
}

.raceClassSelect:hover {
 /* background-color: #158CB8; */
 background-color: #4C4644;
}

.raceClassSelect.selected {
 background-color: #199089;
}

.raceClassSelect.selected:hover {
 /* background-color: #6A9872; */
 background-color: #366D69;
}

button.characterButton {
 border-radius: 3px;
 height: 100px;
 margin: 1rem 0rem 1rem 0rem;
}

.heroImage {
 object-fit: contain;
 border-radius: 3px;
}

.heroImage img {
 height: 460px;
}

.human {
 background-color: blue;
}
.elf {
 background-color: green;
}
.dwarf {
 background-color: red;
}

.heroImageNotRendered {
 margin-top: 200px;
}


/* Hub section */
.hubTop {
 min-height: 350px;
 margin-bottom: 10px;
}

.hubBottom {
 min-height: 180px;
}

div.columns.hubWrapper {
 padding: 0px 5px 0px 5px;
}

.hubFieldTop {
 min-height: 350px;
 background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}

div.small-6.columns.hubCharacter {
 margin-top: 10px;
}

div.small-6.columns.hubInventory {
 margin-top: 10px;
}


div.small-12.columns.inventoryTextWrapper {
 padding: 0px;
 margin-top: 8px;
}

.inventoryText {
 text-align: left;
 color: seashell;
 padding: 5px;
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
 background-image: url("<%= image_path("backgrounds/stone-background3.jpg") %>");
}

.hubFieldBottom {
 min-height: 180px;
 background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;

}

button.continueQuestButton {
 margin: 20px 20px 0px 20px;
 height: 140px;
 width: -webkit-fill-available;
 max-width: 363.33px;
 font-size: x-large;
 background-color: #303030;
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
}

button.continueQuestButton:hover {
 color: red;
 background-color: #202020;
}



/* encounters */
.enemyImage {
 max-height: 180px;
}

.dungeonEvent {
 background-image: url("<%= image_path("backgrounds/dungeonBackground2.jpg") %>");
 min-height: 300px;
 background-position: center;
 padding-top: 100px;
}


/* simple pop up */
.simplePopUp {
 background-color: #333333;
 border: 1px solid black;
}
