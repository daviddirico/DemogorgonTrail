.gameWrapper {
 max-width: 950px;
 position: relative;
 margin: 0 auto
}


.startCampaignWrapper {
  padding: 20px;
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}


.campaignStartImage {
  margin: 0 auto;
  max-width: 600px;
}



.characterFormBackDrop {
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
  margin: 0 auto;
  padding: 20px;
  max-width: 400px;
  height: 500px;
  /* border: 0px solid black; */
  border-radius: 6px;
  /* box-shadow: 0px 0px 2px 0px black; */
  overflow: hidden;
}

input.character-name-field {
 margin-bottom: 30px;
}

.raceClassTitle {
 margin: 0px;
}

.raceClassList {
 display: table;
 border-spacing: 5px;
 margin: 0px 0px 40px 0px;
}

.raceClassSelect {
 background-color: rgb(100, 30, 30);
 display: table-cell;
 padding-top: 18px;
 width: 120px;
 height: 60px;
 margin: 1px;
 margin-top: 40px;
 border: 0px solid black;
 border-radius: 3px;
 box-shadow: 0px 0px 2px 0px black
}

.raceClassSelect:hover {
 /* background-color: #158CB8; */
 background-color: #4C4644;
}

.raceClassSelect.selected {
 background-color: #199089;
}

.raceClassSelect.selected:hover {
 /* background-color: #6A9872; */
 background-color: #366D69;
}

button.characterButton {
 border-radius: 3px;
 height: 100px;
 margin: 1rem 0rem 1rem 0rem;
}

.heroImage {
 object-fit: contain;
 border-radius: 3px;
}

.heroImage img {
 height: 460px;
}

.human {
 background-color: blue;
}
.elf {
 background-color: green;
}
.dwarf {
 background-color: red;
}

.heroImageNotRendered {
 margin-top: 200px;
}


/* Hub section */
.hubTop {
 min-height: 350px;
 margin-bottom: 10px;
}

.hubBottom {
 min-height: 180px;
}

div.columns.hubWrapper {
 padding: 0px 5px 0px 5px;
}

.hubFieldTop {
  padding-top: 10px;
  min-height: 350px;
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}

.hubMapText {
  font-size: 26px;
}

img.campaignMap {
  width: -webkit-fill-available;
  margin:  10px 13px 13px 13px;
}

/* div.small-6.columns.hubCharacter {
}

div.small-6.columns.hubInventory {
} */


div.small-12.columns.inventoryTextWrapper {
 padding: 0px;
 margin-top: 8px;
}

.inventoryText {
 text-align: left;
 color: seashell;
 padding: 5px;
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
 background-image: url("<%= image_path("backgrounds/stone-background3.jpg") %>");
}

.hubFieldBottom {
 min-height: 180px;
 background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;

}

.hubQuestHeader {
  margin-top: 10px;
  font-size: 26px;
}

.hubQuestLog {
  text-align: left;
  margin: 10px 15px 15px 15px;
}

button.continueQuestButton {
 margin: 20px 20px 0px 20px;
 height: 140px;
 width: -webkit-fill-available;
 max-width: 363.33px;
 font-size: x-large;
 background-color: #303030;
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
}

button.continueQuestButton:hover {
 color: red;
 background-color: #202020;
}



/* encounters */
.enemyImage {
 max-height: 180px;
}

.dungeonEvent {
 background-image: url("<%= image_path("backgrounds/dungeonBackground2.jpg") %>");
 min-height: 300px;
 background-position: center;
 padding-top: 100px;
 border: 2px solid transparent;
 border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}

.listOfBattleOptions {
  max-width: 400px;
  margin: 0 auto;
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
}

.fightRun {
  margin: 20px;
  width: -webkit-fill-available;
}

button.battleButton {
  background-color: #303030;
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
  margin-bottom: 0px;
  width: 168px;
  max-width: 168px;
}

.leftBattleTile {
  margin-right: 10px
}

.rightBattleTile {
  margin-left: 10px
}

button.inventoryButton {
  background-color: #303030;
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
  width: -webkit-fill-available;
  margin: 0px 20px 20px 20px;
}

button.battleButton:hover {
  color: red;
  background-color: #202020;
}

button.inventoryButton:hover {
  color: red;
  background-color: #202020;
}

.optionsText {
  margin-top: 10px;
}

/* simple pop up */

div.simplePopUp {
  margin-top: 150px;
}

.simplePopUp {
  background-image: url("<%= image_path("backgrounds/stone-background4.jpg") %>");
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background2.jpg") %>") 20;
  max-width: 400px;
  height: 200px;
  margin: 0 auto;
}

.simplePopUpContent {
  margin: 40px;
}

button.simpleButton {
  background-color: #303030;
  border: 2px solid transparent;
  border-image: url("<%= image_path("backgrounds/stone-background.jpg") %>") 20;
  width: 100px;
  margin: 0px 20px 20px 20px;
}

button.simpleButton:hover {
  color: red;
  background-color: #202020;
}
